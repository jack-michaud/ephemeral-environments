# Ephemeral Environments - Configuration
# Copy this file to .env and fill in the values
# Run setup scripts to generate credentials with minimal permissions

# =============================================================================
# AWS Credentials
# Created via: ./scripts/setup-aws-credentials.sh
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# =============================================================================
# Cloudflare Credentials
# Created via: ./scripts/setup-cloudflare-token.sh
# =============================================================================
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=

# =============================================================================
# GitHub App Credentials
# Created via: ./scripts/setup-github-app.sh
# =============================================================================
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY_PATH=./github-app.pem
GITHUB_WEBHOOK_SECRET=

# =============================================================================
# Optional: Custom settings
# =============================================================================
# EC2 instance type for environments (default: t3.small)
EC2_INSTANCE_TYPE=t3.small

# Auto-stop timeout in hours (default: 4)
AUTO_STOP_HOURS=4

# Maximum concurrent environments (default: 20)
MAX_ENVIRONMENTS=20
